@page "/auth"
@inject NavigationManager Navigation

<h3>Box OAuth Authentication</h3>
<button @onclick="RedirectToBoxLogin">Login with Box</button>

@code {
    private void RedirectToBoxLogin()
    {
        var clientId = "xt52jorsw8fzbit06h1rbciwl96cywe1";
        var redirectUri = "https://localhost:7241/box-callback";

        // Boxの認証URL
        var authUrl = $"https://account.box.com/api/oauth2/authorize?response_type=code&client_id={clientId}&redirect_uri={redirectUri}";

        // ユーザーをBoxの認証ページにリダイレクト
        Navigation.NavigateTo(authUrl, forceLoad: true);
    }
}
