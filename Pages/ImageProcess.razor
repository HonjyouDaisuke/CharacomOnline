
@page "/image-process"

<style>
	.full-height-splitter {
	height: calc(100vh - 3.5rem - 3.5rem - 3.5rem); /* 縦方向の高さを画面全体に設定 */
}

.pane-content {
	padding: 10px;
	height: 100%;
}
</style>
<RadzenSplitter class="full-height-splitter">
    <RadzenSplitterPane Size="20%" MinSize="20%" Resizable="true">
        <div style="padding: 10px; background-color: #f5f5f5; height: 100%;">
            <h3>Left Panel</h3>
            <p>Content for the left panel goes here.</p>
        </div>
    </RadzenSplitterPane>
    <RadzenSplitterPane Size="60%" MinSize="20%" Resizable="true">
        <RadzenSplitter Orientation="Radzen.Orientation.Vertical">
            <!-- 上部 -->
            <RadzenSplitterPane Size="50%" MinSize="10%" Resizable="true">
                <div style="padding: 10px; background-color: #eaeaea; height: 100%;">
                    <h3>Center - Top</h3>
                    <p>Content for the top section of the center panel goes here.</p>
                </div>
            </RadzenSplitterPane>
            <!-- 下部 -->
            <RadzenSplitterPane Size="50%" MinSize="10%" Resizable="true">
                <div style="padding: 10px; background-color: #cccccc; height: 100%;">
                    <h3>Center - Bottom</h3>
                    <p>Content for the bottom section of the center panel goes here.</p>
                </div>
            </RadzenSplitterPane>
        </RadzenSplitter>
    </RadzenSplitterPane>
    <RadzenSplitterPane Size="320%" MinSize="20%" Resizable="true">
        <div style="padding: 10px; background-color: #dddddd; height: 100%;">
            <h3>Right Panel</h3>
            <p>Content for the right panel goes here.</p>
        </div>
    </RadzenSplitterPane>
</RadzenSplitter>