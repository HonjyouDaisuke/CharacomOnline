@page "/charaimages"
@using CharacomOnline.ImageProcessing
@using Microsoft.AspNetCore.Components.Web
@using Radzen
@using CharacomOnline.Components
@using CharacomOnline.ViewModel
@using CharacomOnline.Entity
@using Radzen.Blazor
<PageTitle>Chara Images</PageTitle>

<h1>画像一覧</h1>

<RadzenStack Orientation="Radzen.Orientation.Vertical" Gap="1rem">
	<RadzenRow>
	<RadzenColumn >
		<RadzenCard>
			<BinaryImage />
		</RadzenCard>
	</RadzenColumn>
	</RadzenRow>
	<RadzenRow>
	<RadzenColumn>
		<RadzenCard>
			<CharaDataGrid CharaDataView="@charaDataViewModel" SelectedData="@selectedData" SelectedDataChanged="OnSelectedDataChanged"/>
		</RadzenCard>
	</RadzenColumn>
	<RadzenColumn>
		<RadzenCard>
			<CharaDataGrid CharaDataView="@charaDataViewModel" SelectedData="@selectedData" SelectedDataChanged="OnSelectedDataChanged"/>
		</RadzenCard>
	</RadzenColumn>
	</RadzenRow>
</RadzenStack>

@code {
	private CharaDataClass selectedData { get; set; } = new CharaDataClass();
	private CharaDataViewModel charaDataViewModel = new CharaDataViewModel();


	private void OnSelectedDataChanged(CharaDataClass newSelectedData)
	{
		Console.WriteLine("selected Data Changed!!");
		selectedData = newSelectedData;
	}
}
