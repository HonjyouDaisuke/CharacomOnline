    private List<string> CharaData = new List<string>
    {
        "せ","れ","晴","山","富","6","続","理","畠","2","妹","は","し","部","節","と",
        "9","4","時","遺","ば","魚","こ","す","市","が","回","県","産","い","3","日",
        "９","お","生","島","和","吉","全","子","の","撤","財","相","か","2","ご","5",
    };
}
